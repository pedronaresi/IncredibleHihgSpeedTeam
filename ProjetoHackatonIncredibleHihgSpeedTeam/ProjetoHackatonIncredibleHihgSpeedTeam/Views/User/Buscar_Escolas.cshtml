@model IEnumerable<ProjetoHackatonIncredibleHihgSpeedTeam.Models.EscolaMOD>
@{
    ViewBag.Title = "Escolas";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var nmCurso = ViewBag.nmCurso;
}

<div class="page-header">
    <h1>Escolas que oferecem o curso de @nmCurso</h1>
</div>
<div class="container" id="lista_empresas_contratar">
    <table class="table-responsive table table-striped custab">
        <thead>
            <tr>
                <th></th>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var escola in Model)
            {
                <tr>
                    <th></th>
                    <th>@escola.Nome</th>
                    <th><a href="#">Entrar em contato</a></th>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-center">Escolas: @Model.Count()</td>
            </tr>
        </tfoot>
    </table>
</div>
<a href="#" onclick="history.go(-1);" class="btn">Voltar</a>
